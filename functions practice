print()

# 2
def nameage(name: str, age: int) -> str:
	return f"Your name is {name} and you are {age} years old."


results = nameage("lina", 16)
print(results)


# 3
def average(num1: float, num2: float) -> float:
	return (num1 + num2) / 2

results = average(3, 5)
print(results)

# 4
def max(a: int, b: int, c:int) -> int:
	if a > b and a > c:
		return a
	elif b > a and b > c:
		return b
	else:
		return c
results = max(4, 5, 6)
print(results)

def firsttwo(string: str) -> str:
	return string[:2]
results = firsttwo("hello")
print(results)

# 5
def shortlongshort(a: str, b: str) -> str:
    if len(a) > len(b):
        return b + a + b
    else:
        return a + b + a
results = shortlongshort("beep", "bop")
print(results)
